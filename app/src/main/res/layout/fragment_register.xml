<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ss_neumorphic_background"
    android:id="@+id/registerscreenlayout"
    tools:context=".Fragments.RegisterFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create User"
        android:textStyle="bold"
        android:textColor="@color/darkcyan"
        android:textSize="25dp"
        android:layout_marginTop="16.5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/signuptxt"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="username"
        android:id="@+id/usernameedit"
        android:layout_marginTop="21.2dp"
        android:textSize="21.2dp"
        android:drawableLeft="@drawable/user"
        android:paddingRight="18.2dp"
        android:paddingLeft="18.2dp"
        android:focusableInTouchMode="true"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/signuptxt"
        app:ss_neumorphic_shapeType="basin"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textSize="21.1dp"
        android:id="@+id/emailedit"
        android:drawableLeft="@drawable/email"
        android:paddingRight="18.2dp"
        android:paddingLeft="18.2dp"
        android:layout_marginTop="21.2dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/usernameedit"
        app:ss_neumorphic_shapeType="basin"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:focusableInTouchMode="true"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="phone number"
        android:drawableLeft="@drawable/phone"
        android:paddingRight="18.2dp"
        android:paddingLeft="18.2dp"
        android:textSize="21.1dp"
        android:inputType="phone"
        android:id="@+id/phoneedit"
        android:layout_marginTop="21.2dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/emailedit"
        app:ss_neumorphic_shapeType="basin"
        android:focusableInTouchMode="true"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="city"
        android:textSize="21.1dp"
        android:inputType="textEmailAddress"
        android:id="@+id/cityedit"
        android:drawableLeft="@drawable/location"
        android:paddingRight="18.2dp"
        android:paddingLeft="18.2dp"
        android:layout_marginTop="21.2dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/phoneedit"
        app:ss_neumorphic_shapeType="basin"
        android:focusableInTouchMode="true"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="password"
        android:textSize="21.1dp"
        android:inputType="textPassword"
        android:id="@+id/passwordedit"
        android:drawableLeft="@drawable/password"
        android:paddingRight="18.2dp"
        android:paddingLeft="18.2dp"
        android:layout_marginTop="21.2dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/cityedit"
        app:ss_neumorphic_shapeType="basin"
        android:focusableInTouchMode="true"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:layout_marginTop="19.2dp"
        android:background="@color/orangered"
        app:layout_constraintTop_toBottomOf="@id/passwordedit"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/savebtn"
        android:orientation="vertical">
        <TextView
            android:id="@+id/signuptext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Register User"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="22dp"
            android:visibility="visible"
            android:layout_gravity="center"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/signupprogress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:progressTint="@color/white"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/white"
            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>